            <center>
                 <AnchorPane style="-fx-alignment: center;" BorderPane.alignment="CENTER">
                     <children>
                         <fx:include fx:id="mainMenuPage" source="MainMenuPage.fxml" />
                         <fx:include fx:id="mapEditorPage" source="MapEditorPage.fxml" />
                         <fx:include fx:id="labServiceRequestPage" source="ServiceRequestPages/LabServiceRequestPage.fxml" />
                         <fx:include fx:id="languageInterpreterServiceRequestPage" source="ServiceRequestPages/LanguageInterpreterServiceRequestPage.fxml" />
                         <fx:include fx:id="mealDeliveryServiceRequestPage" source="ServiceRequestPages/MealDeliveryServiceRequestPage.fxml" />
                         <fx:include fx:id="medicalEquipmentServiceRequestPage" source="ServiceRequestPages/MedicalEquipmentServiceRequestPage.fxml" />
                         <fx:include fx:id="medicineDeliveryServiceRequestPage" source="ServiceRequestPages/MedicineDeliveryServiceRequestPage.fxml" />
                         <fx:include fx:id="securityServiceRequestPage" source="ServiceRequestPages/SecurityServiceRequestPage.fxml" />
                         <fx:include fx:id="computerServiceRequestPage" source="ServiceRequestPages/ComputerServiceRequestPage.fxml" />
                         <fx:include fx:id="sanitationRequestPage" source="ServiceRequestPages/SanitationRequest.fxml" />
                         <fx:include fx:id="flowerRequestPage" source="ServiceRequestPages/FlowerRequestPage.fxml" />
                         <fx:include fx:id="giftDeliveryPage" source="ServiceRequestPages/GiftDeliveryRequest.fxml" />
                         <fx:include fx:id="requestListPage" source="RequestListPage.fxml" />
                         <fx:include fx:id="requestHubPage" source="RequestHubPage.fxml" />
                         <fx:include fx:id="helpPage" source="HelpPage.fxml" />
                         <fx:include fx:id="aboutPage" source="AboutPage.fxml" />
                         <fx:include fx:id="profilePage" source="ProfilePage.fxml" />
                         <fx:include fx:id="loginPage" source="LoginPage.fxml" />
                         <fx:include fx:id="adminHubPage" source="AdminHub.fxml" />
                         <fx:include fx:id="messagingPage" source="MessagingPage.fxml" />
                         <fx:include fx:id="gamingPage" source="Gaming.fxml" />
                         <fx:include fx:id="equipListPage" source="EquipmentList.fxml" />
                     </children>
                 </AnchorPane>
            </center>
            <top>
                <AnchorPane minWidth="750.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox fx:id="menuBar" visible="false" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="6.0">
                            <children>
                                <MenuButton alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="30.0" prefWidth="113.0" text="Menu" textAlignment="CENTER" textOverrun="CLIP">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#switchToMainMenu" text="Main Menu" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToAbout" text="About" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToEquipList" text = "Equipment List" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToGaming" text="Simulations" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToMessaging" text="Messaging" />
                                    </items>
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0" />
                                    </HBox.margin>
                                </MenuButton>
                                <MenuButton alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="30.0" prefWidth="113.0" text="Requests" textAlignment="CENTER" textOverrun="CLIP">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#switchToRequestHub" text="Request Hub" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToRequestList" text="Request List" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToLab" text="Lab Services" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToMedicalEquipmentDelivery" text="Equipment" />
