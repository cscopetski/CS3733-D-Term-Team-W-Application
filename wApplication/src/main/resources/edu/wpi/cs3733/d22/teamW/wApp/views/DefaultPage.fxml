                                        <MenuItem mnemonicParsing="false" onAction="#switchToMealDelivery" text="Meals" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToLanguageInterpreter" text="Interpreters" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToSecurity" text="Security" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToComputerService" text="Computer" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToFlowerService" text="Flowers" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToGiftService" text="Gifts" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToSanitationService" text="Sanitation" />
                                    </items>
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0" />
                                    </HBox.margin>
                                </MenuButton>
                                <MenuButton alignment="CENTER" contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="30.0" prefWidth="113.0" text="Account" textAlignment="CENTER" textOverrun="CLIP">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#switchToProfile" text="My Account" />
                                        <MenuItem mnemonicParsing="false" onAction="#switchToAdminHub" text="Admin Hub" />
                                        <MenuItem mnemonicParsing="false" onAction="#logOut" text="Log Out" />
                                    </items>
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0" />
                                    </HBox.margin>
                                </MenuButton>
                                <Button mnemonicParsing="false" onAction="#switchToMapEditor" prefHeight="30.0" prefWidth="113.0" text="View Map" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#exitProgram" prefHeight="30.0" prefWidth="113.0" text="Exit" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets right="10.0" top="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </HBox>
                        <Pane fx:id="buttonPane" disable="true" onMouseClicked="#switchToMainMenu" prefHeight="65.0" prefWidth="275.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <ImageView fitHeight="27.0" fitWidth="200.0" layoutX="37.0" layoutY="12.0" onMousePressed="#switchToMainMenu">
                                    <image>
                                        <Image url="@../assets/HospitalLogo.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </children>
                </AnchorPane>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
