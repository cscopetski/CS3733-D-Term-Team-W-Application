<AnchorPane style="-fx-alignment: center;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.d22.teamW.wApp.controllers.LoginController">
   <children>
      <AnchorPane styleClass="body" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Pane fx:id="background" prefHeight="200.0" prefWidth="200.0" styleClass="body" stylesheets="@../CSS/LoginPage/paneImage.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <effect>
                  <GaussianBlur radius="5.0" />
               </effect></Pane>
            <BorderPane layoutX="215.0" layoutY="100.0" prefHeight="300.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <center>
                  <Pane maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" styleClass="pane" stylesheets="@../CSS/LoginPage/paneLogin.css" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="100.0" left="200.0" right="200.0" top="100.0" />
                     </BorderPane.margin>
                     <children>
                        <Button fx:id="loginButton" layoutX="200.0" layoutY="250.0" mnemonicParsing="false" onAction="#login" stylesheets="@../CSS/UniversalCSS/Standard.css" text="Login" />
                        <VBox alignment="CENTER" prefHeight="240.0" prefWidth="300.0">
                           <children>
                              <Label alignment="CENTER" maxWidth="225.0" prefWidth="225.0" text="Hello, Wilson Wong">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Label>
                              <Label maxWidth="225.0" prefWidth="225.0" text="Username">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="username" maxWidth="250.0" onAction="#onEnter" prefWidth="250.0" styleClass="text-field" stylesheets="@../CSS/UniversalCSS/Standard.css">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                              <Label fx:id="existCase" alignment="CENTER_RIGHT" prefWidth="225.0" text="Username does not exist." textFill="RED" visible="false">
