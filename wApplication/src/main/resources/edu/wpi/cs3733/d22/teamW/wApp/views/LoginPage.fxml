                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Label>
                              <Label maxWidth="225.0" prefWidth="225.0" text="Password">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="password" maxWidth="250.0" onAction="#onEnter" prefWidth="250.0" styleClass="text-field" stylesheets="@../CSS/UniversalCSS/Standard.css">
                                 <VBox.margin>
                                    <Insets left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </PasswordField>
                              <Label fx:id="matchCase" alignment="CENTER_RIGHT" prefWidth="225.0" text="Password does not match username." textFill="RED" visible="false" />
                           </children>
                        </VBox>
                     </children>
                  </Pane>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </children>
